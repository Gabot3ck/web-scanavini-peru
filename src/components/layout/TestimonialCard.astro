---
export interface Props {
  name: string;
  position?: string;
  company?: string;
  testimonial: string;
  rating: number; // 1-5
  imageAlt?: string;
  isActive?: boolean;
}

const {
  name,
  company,
  testimonial,
  rating,
  isActive = false
} = Astro.props;

// Generar array de estrellas basado en rating
const stars = Array.from({ length: 5 }, (_, index) => index < rating);
---

<div
  class="testimonial-card flex-shrink-0 w-full sm:w-1/2 md:w-1/3  px-4 cursor-pointer focus:outline-none focus-visible:ring-2 focus-visible:ring-brand focus-visible:ring-offset-2 rounded-2xl"
  data-rating={rating}
  role="button"
  tabindex="0"
  aria-pressed={isActive ? 'true' : 'false'}
>
  <div class="bg-white p-4 lg:p-8 xl:p-10 rounded-2xl shadow-sm border border-gray-50 min-h-[280px] h-auto md:h-full flex flex-col  text-center transition-all duration-300 hover:shadow-lg hover:-translate-y-1">

    <!-- Client Name -->
    <h3 class="text-xl md:text-2xl font-bold text-gray-800  leading-tight">
      {name}
    </h3>

    <!-- Position & Company -->
    <p class="text-gray-500 text-sm md:text-base mb-4 font-medium">
      {company ? ` ${company}` : ""}
    </p>


    <!-- Rating Stars -->
    <div class="flex items-center justify-center space-x-1 mb-4">
      {stars.map((filled) => (
        <svg
          class={`w-5 h-5 ${filled ? 'text-brand' : 'text-gray-300'} transition-colors duration-200`}
          fill="currentColor"
          viewBox="0 0 20 20"
          xmlns="http://www.w3.org/2000/svg"
        >
          <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.719c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
        </svg>
      ))}
    </div>

    <!-- Testimonial Text -->
    <div class="flex-grow flex items-start">
      <p class="text-gray-600 text-sm md:text-base xl:text-lg leading-relaxed italic px-2">
        "{testimonial}"
      </p>
    </div>
  </div>
</div>

<style>
  .testimonial-card {
    animation: fadeInUp 0.6s ease-out forwards;
  }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  /* Custom border width for the image */
  .border-3 {
    border-width: 3px;
  }
</style>
