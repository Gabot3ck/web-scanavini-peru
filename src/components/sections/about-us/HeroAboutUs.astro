---
const video = 'https://storage.scanavini.cl/videos/website/nosotros.webm';

---

<section
  class="relative w-full h-[100dvh] overflow-hidden flex items-center justify-center bg-black
  before:content-[''] before:absolute before:inset-x-0 before:top-0 before:h-[180px] before:bg-gradient-to-b before:from-[rgb(0,0,0)] before:to-transparent before:pointer-events-none before:z-20
  after:content-['']  after:absolute  after:inset-x-0  after:bottom-0 after:h-[180px] after:bg-gradient-to-t after:from-[rgb(0,0,0)]  after:to-transparent  after:pointer-events-none  after:z-20
  sm:before:h-[180px] sm:after:h-[180px]"
  data-autoplay="true"
  data-interval="7000"
>
  <!-- Video Background -->
  <video
    class="absolute inset-0 w-screen h-screen object-cover z-10"
    autoplay
    muted
    loop
    playsinline
    preload="auto"
  >
    <source src={video} media="(max-width: 600px)" />
    <source src={video} media="(min-width: 601px)" />
  </video>
</section>