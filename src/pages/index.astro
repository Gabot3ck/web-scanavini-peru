---
import Hero from '../components/sections/home/Hero.astro';
import ValueProposition from '../components/sections/home/ValueProposition.astro';
import Layout from '../layouts/Layout.astro';
import Testimonials from '../components/sections/home/Testimonials.astro';
import MarketsSlider from '../components/sections/home/MarketsSlider.astro';
import BrandsRepresented from '../components/sections/home/BrandsRepresented.astro';
import CallToAction from '../components/sections/home/CallToAction.astro';
import Showroom from '../components/sections/home/Showroom.astro';
import KeyFeatures from '../components/sections/home/KeyFeatures.astro';

const jsonLd = {
  "@context": "https://schema.org",
  "@type": "Organization",
  "name": "Scanavini Comercial S.A.C.",
  "url": "https://www.scanavini.pe",
  "logo": "https://www.scanavini.pe/iso_scanavini.svg",
  "sameAs": [
    "https://www.tiktok.com/@scanavini.peru", 
    "https://web.facebook.com/ScanaviniPeru",
		"https://www.instagram.com/scanavini_peru",
		"https://www.linkedin.com/company/scanavini-comercial-sac"
  ]
};

---
<!-- logoSwapOnHoverAtTop={true} Activa el cambio del logo en hover cuando se está “arriba” -->
<Layout
	title="Scanavini - Cerraduras protegiendo tu hogar por 75 años"
  description="Somos una empresa chilena con más de 75 años de experiencia, fabricando cerraduras con calidad garantizada de por vida, como compromiso con tu seguridad y la de tu familia."
	image='/iso_scanavini.svg'
	menuTextClass="text-white"
  logoBaseVariant="light"
	logoSwapOnHoverAtTop={ true }
	robots="index,follow"
	jsonLd={ jsonLd }
>
	<Hero />
	<KeyFeatures />
	<ValueProposition />
	<Showroom />
	<MarketsSlider />
	<CallToAction />
	<BrandsRepresented />
	<Testimonials />
</Layout>
