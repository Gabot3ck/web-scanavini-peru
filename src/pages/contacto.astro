---
import Contact from '../components/contact/Contact.astro';
import Layout from '../layouts/Layout.astro';

// Datos para la página About
const pageData = {
  title: 'Contacto',
  description: 'Comunícate con Scanavini Comercial S.A.C para recibir asesoría en cerraduras, candados, bisagras, manillas, barras antipánico y soluciones de acceso en todo Chile.',
};

const jsonLd = {
  "@context": "https://schema.org",
  "@type": "Organization",
  "name": "Scanavini Comercial S.A.C",
  "url": "https://www.scanavini.pe/contacto",
  "logo": "https://www.scanavini.pe/iso_scanavini.svg",
  "sameAs": [
    "https://www.tiktok.com/@scanavini.peru", 
    "https://web.facebook.com/ScanaviniPeru",
		"https://www.instagram.com/scanavini_peru",
		"https://www.linkedin.com/company/scanavini-comercial-sac"
  ],
  "department": [
    {
      "@type": "LocalBusiness",
      "name": "Showroom Scanavini Perú",
      "image": "https://www.scanavini.pe/images/seo/showroom-scanavini-casa-matriz.webp",
      "telephone": "+51 983 487 908",
      "address": {
        "@type": "PostalAddress",
        "streetAddress": "Av. Emilio Cavenecia 337",
        "addressLocality": "San Isidro",
        "addressRegion": "Lima",
        "addressCountry": "PE",
      },
      "openingHours": [
        "Mo-Th 08:00-18:30",
        "Fr 08:00-16:45"
      ]
    }
  ]
};
---

<!-- logoSwapOnHoverAtTop={true} Activa el cambio del logo en hover cuando se está “arriba” -->
<Layout 
  title={pageData.title}
  description={pageData.description}
  menuTextClass="text-gray-700"
  logoBaseVariant="dark"
  logoSwapOnHoverAtTop={false}
  logoSwapOnScroll={true}
  robots="index,follow"
  jsonLd={ jsonLd }
>
  <Contact />
  
</Layout>